{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist-tests",
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [
    "lib/lightning.ts",
    "lib/lightning.test.ts",
    "lib/api/comments.ts",
    "lib/api/comments.test.ts",
    "lib/hooks/use-zap-workflow.ts",
    "lib/hooks/use-zap-workflow.test.tsx",
    "components/zap-button.tsx",
    "components/ui/**/*.ts",
    "components/ui/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
